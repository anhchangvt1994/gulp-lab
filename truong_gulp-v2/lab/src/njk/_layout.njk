{% set objResource = objGlobal.resource; %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{{ objResource.projectTitle + '-' + pageHeadTitle }}</title>

    <!-- global css file (common.css) -->
    {% for cssFile in objResource['common']['arrCssFile'] %}
      <link rel="stylesheet" href="{{ 'css/' + cssFile + '.css' + '?v=' + intRandomNumber }}">
    {% endfor %}

    <!-- page css file -->
    {% for cssFile in objResource %}
      <link rel="stylesheet" href="{{ 'css/' + cssFile + '.css' + '?v=' + intRandomNumber }}">
    {% endfor %}

    <!-- global js file (common.js) -->
    {% for jsFile in objResource['common']['arrJsFile'] %}
      <script src="{{ 'js/' + jsFile + '.js' + '?v=' + intRandomNumber }}"></script>
    {% endfor %}
  </head>
  <body class='{{ bodyClass }}'>
    <!-- header region -->
    {% block header %}
      {% include "./header/header.njk" %}
    {% endblock %}
    <!-- #end header region -->

    <!-- body region -->
    {% block body %}{% endblock %}
    <!-- #end body region -->

    <!-- footer region -->
    {% block footer %}
      {% include "./footer/footer.njk" %}
    {% endblock %}
    <!-- #end footer region -->

    <!-- page js file -->
    {% for jsFile in objResource[namepage]['arrJsFile'] %}
      <script src="{{ 'js/' + jsFile + '.js' + '?v=' + intRandomNumber }}"></script>
    {% endfor %}

    <!-- other js file -->
    {% block script %}{% endblock %}
  </body>
</html>
